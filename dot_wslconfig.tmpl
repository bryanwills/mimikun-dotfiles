[wsl2]
{{ if (eq .chezmoi.hostname "TanakaPC") -}}
# NOTE: human rights violated
memory=3GB
swap=8GB
{{ else -}}
# NOTE: human rights protected
memory=8GB
swap=0
{{ end -}}

localhostforwarding=true

# NOTE: Only available on Windows 11
#nestedVirtualization=false

# NOTE: Only available on Windows 11
#vmIdleTimeout=6000

# NOTE: Only available on Windows 11 22H2
networkingMode = "mirrored"

[experimental]
autoMemoryReclaim="disabled"
# NOTE: slow release
#autoMemoryReclaim="gradual"
# NOTE: instant release
#autoMemoryReclaim="dropcache"

sparseVhd = false

# NOTE: Only available on Windows 11 22H2
hostAddressLoopback=false

# vim:ft=conf
